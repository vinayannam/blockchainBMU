 <h2 class="page-header">Send Money</h2>
 {{#if errors}}
      {{#each errors}}
        <div class="alert alert-danger">{{msg}}</div>
      {{/each}}
{{/if}}
 <form method="post" action="/bank/send">
  <div class="form-group">
    <label>Public Key</label>
    <p style="word-wrap: break-word; color:dodgerblue;">{{publicKey}}</p>
  </div>
  <div class="form-group">
    <label>Reciever Public Key</label>
    <input type="text" class="form-control" placeholder="Reciever PublicKey" name="reciever">
  </div>
  <div class="form-group">
    <label>Amount</label>
    <input type="number" class="form-control" placeholder="Amount" name="amount">
  </div>
  <button type="submit" class="btn btn-default">Sign</button>
</form>